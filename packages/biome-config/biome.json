{
	"root": true,

	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf"
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useUniqueElementIds": "off"
			},
			"style": {
				"useBlockStatements": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"fix": "safe",
					"level": "on",
					"options": {
						"attributes": [
							"className",
							"class"
						],
						"functions": [
							"cn",
							"cx",
							"clsx",
							"tw",
							"twMerge"
						]
					}
				}
			}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"arrowParentheses": "always",
			"operatorLinebreak": "after"
		}
	},

	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": false
		},

		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 2,
			"expand": "always"
		}
	},

	"css": {
		"formatter": {
			"enabled": false
		},

		"linter": {
			"enabled": false
		}
	}
}
